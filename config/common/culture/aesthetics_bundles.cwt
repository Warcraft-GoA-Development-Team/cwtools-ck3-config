types = {
    type[aesthetic] = {
        path = "game/common/culture/aesthetics_bundles"

        localisation = {
            ## required
            Name = "$_name"
        }
    }
}

## cardinality = 0..inf
aesthetic = {
    ## cardinality = 1..1
    ### Which name list to use.
    name_list = <name_list>

    ### Coat of Arms graphics
    coa_gfx = { 
        ## cardinality = 1..inf
        enum[coa_gfx]
    }
    ### Buildings graphics
    building_gfx = { 
        ## cardinality = 1..inf
        enum[building_gfx]
    }
    ### Clothing graphics
    clothing_gfx = { 
        ## cardinality = 1..inf
        enum[clothing_gfx]
    }
    ### Unit Graphics
    unit_gfx = { 
        ## cardinality = 1..inf
        enum[unit_gfx]
    }

    
    ### Check to see whether or not to offer the aesthetic.
	### root is the diverging character's culture, scope:character is the character.
	### scope:trait is a list of all the selected culture traits, like in the culture trait script.
    ## replace_scope = { root = culture character = character trait = culture_pillar }
    ## cardinality = 0..1
    is_shown = single_alias_right[trigger_clause]
}
